@using Blazor.Diagrams.Components.Renderers
@using Blazor.Diagrams.Core.Models;

<MudTd DataLabel="Primary">
    @if (Column.Primary)
    {
        <MudIcon Icon="@Icons.Material.TwoTone.Key" Color="@Color.Warning" />
    }
    else
    {
        <PortRenderer Port="Table.GetPort(Column)"></PortRenderer>
        <MudIcon Icon="@Icons.Material.TwoTone.Link" Color="@Color.Info" />
    }
</MudTd>
<MudTd DataLabel="Name">@Column.Name</MudTd>
<MudTd>
    @if (Column.Primary)
    {
        <PortRenderer Port="Table.GetPort(PortAlignment.Right)"></PortRenderer>
    }
</MudTd>
