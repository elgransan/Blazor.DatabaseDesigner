@using Blazor.Diagrams.Components.Renderers
@using Blazor.Diagrams.Core.Models;

<span>
    <MudCard Style="@(Node.Selected ? "outline: 4px dashed var(--mud-palette-tertiary);" : "")">
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6">@Node.Label</MudText>
            </CardHeaderContent>
            <CardHeaderActions>
                <MudIcon Icon="@Node.Icon" Color="Color.Default" />
            </CardHeaderActions>
        </MudCardHeader>
        <MudCardContent>
            <MudTable Items="@Node.Columns" Dense Hover Striped RowClassFunc="SelectedRowClassFunc">
                <RowTemplate>
                    <TableColumn Table="@Node" Column="@context" />
                </RowTemplate>
            </MudTable>
        </MudCardContent>
    </MudCard>
</span>